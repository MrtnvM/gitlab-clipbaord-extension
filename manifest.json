{
  "name": "Gitlab Clipboard Extension",
  "version": "1.0",
  "description": "Copy the issues links with well-formatted description in seconds!",
  "permissions": [
    "activeTab",
    "tabs",
    "http://gitlab.com/*",
    "https://gitlab.com/*",
    "clipboardWrite"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://gitlab.com/*",
        "https://gitlab.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "images/logo16.png",
    "32": "images/logo32.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  },
  "web_accessible_resources": [
    "images/copy.svg",
    "images/copied.svg"
  ],
  "manifest_version": 2
}